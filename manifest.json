{
    "manifest_version": 2,
    "name": "Curtain",
    "Description": "Curtain aims to give the end user more control on their data privacy automatically, given their configuration", 
    "version": "1.0",
 
    "browser_action": {
      "browser_style": false,

      "default_title": "Curtain",
      "default_popup": "popup.html"
    },

    "permissions": [
      "activeTab",
      "alarms",
      "browsingData",
      "contextMenus",
      "contextualIdentities",
      "cookies",
      "notifications",
      "storage",
      "tabs",
      "<all_urls>"
    ],

    "content_scripts": 
    [{
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["content_main.js"]
    }]
  }
  