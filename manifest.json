{
    "manifest_version": 2,
    "name": "Curtain",
    "description": "Curtain aims to give the end user more control on their data privacy automatically, given their configuration", 
    "version": "1.0",
 
    "browser_action": {
      "browser_style": false,
      "default_icon": "extension/icons/icon.png",
      "default_title": "Curtain",
      "default_popup": "extension/popup/popup.html"
    },

    "permissions": [
      "activeTab",
      "alarms",
      "browsingData",
      "contextMenus",
      "cookies",
      "notifications",
      "storage",
      "tabs",
      "webRequestBlocking",
      "<all_urls>"
    ],

    "content_scripts": 
    [{
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["content_main.js"]
    }]
  }
  