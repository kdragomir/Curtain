{
    "manifest_version": 2,
    "name": "Curtain",
    "Description": "Curtain aims to give the end user more control on their data privacy automatically, given their configuration", 
    "version": "1.0",
    "default_locale": "en",
    "browser_action": {
      "browser_style": false,
      "default_icon": "icon.png", 
      "default_title": "Curtain",
      "default_popup": "popup.html"
    },

    "permissions": [
      "activeTab",
      "alarms",
      "browsingData",
      "contextMenus",
      "contextualIdentities",
      "cookies",
      "notifications",
      "storage",
      "tabs",
      "<all_urls>"
    ],

    "content_scripts": 
    [{
      "js": ["content_main.js"]
    }]
  }
  